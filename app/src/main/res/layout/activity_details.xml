<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.csci567.dailyrentals.DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell travellers what makes your car unique, and why they should rent it."
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/uniqueText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License plate number"
            android:layout_below="@+id/uniqueText"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/licensePlateText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/licensePlateText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Enter your license plate number"
            android:id="@+id/acceptLicensePlate"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License plate state"
            android:layout_below="@+id/acceptLicensePlate"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/licenseStateText"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/licenseStateText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:id="@+id/acceptLicensePlateState"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your license plate information won't be publicly visible"
            android:textSize="15.5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/acceptLicensePlateState"
            android:id="@+id/safeLicensePlateInfo"/>

        <View android:background="#a8a8a6"
            android:layout_width = "match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@+id/safeLicensePlateInfo"
            android:id="@+id/separatorLine1"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driving License Information"
            android:layout_below="@+id/separatorLine1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/drivingLicenseText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driving License Number"
            android:layout_below="@+id/drivingLicenseText"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/drivingLicenseNumberText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivingLicenseNumberText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Enter your driving license number"
            android:id="@+id/drivingLicenseNumber"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driving License Issuing State"
            android:layout_below="@+id/drivingLicenseNumber"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/drivingLicenseStateText"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivingLicenseStateText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:hint="Enter your driving license state"
            android:id="@+id/drivingLicenseState"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driving License Issuing Country"
            android:layout_below="@+id/drivingLicenseState"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/drivingLicenseCountryText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivingLicenseCountryText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Enter your driving license country"
            android:id="@+id/drivingLicenseCountry"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driving License Date of Birth (in MM/DD/YYYY)"
            android:layout_below="@+id/drivingLicenseCountry"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/drivingLicenseDOBText"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drivingLicenseDOBText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Enter your driving license date of birth"
            android:id="@+id/drivingLicenseDOB"
            android:ems="10"
            android:inputType="date" />

        <View android:background="#a8a8a6"
            android:layout_width = "match_parent"
            android:layout_height="0.75dp"
            android:layout_below="@+id/drivingLicenseDOB"
            android:id="@+id/separatorLine2"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car description"
            android:layout_below="@+id/separatorLine2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/carDescriptionText"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carDescriptionText"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Car Description"
            android:id="@+id/acceptCarDescription"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No need to include you contact info; travellers will receive it once you've confirmed their trip."
            android:textSize="15.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/acceptCarDescription"
            android:id="@+id/noExtraInfo"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noExtraInfo"
            android:layout_marginTop="35dp"
            android:layout_alignParentBottom="true"
            android:text="Next"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#8b36bc"
            android:id="@+id/nextButton"/>

    </RelativeLayout>


</ScrollView>
